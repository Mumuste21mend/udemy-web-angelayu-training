<%- include("partials/header"); -%>
<h1>Home</h1>
<p><%= startingContent %></p>

<% posts.forEach(function(post){ %>

<h1><%=post.title%></h1>
<p>
  <%=post.content.substring(0, 100) + " ..."%>
  <a href="/posts/<%=post.title%>">Read More</a>
</p>

<form data-id="<%=post._id%>" class="" action="/delete" method="post">
  <input type="hidden" name="hidden" value="<%=post._id.toString()%>" />
  <a
    href="javascript:;"
    onclick=' forum=document.querySelector(`[data-id="<%=post._id%>"]`);
    forum.submit();'
  >
    Delete
  </a>
</form>

<% }) %> <%- include("partials/footer"); -%>
